{
    "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",

    "runtime": {
        "version": "LuaJIT",
        "requirePattern": [
            "lua/?.lua",
            "lua/?/init.lua",
            "?/lua/?.lua",
            "?/lua/?/init.lua"
        ]
    },

    "workspace": {
        "library": [
            "$VIMRUNTIME",
            "$HOME/.local/share/nvim/lazy"
        ],

        "ignoreDir": [
            ".git",
            "doc",
            "docs",
            "test",
            "tests",
            "spec",
            "specs",
            "benchmark",
            "benchmarks",
            "build",
            "dist",
            "node_modules"
        ],


        "ignoreGlobs": [
            "**/*_spec.lua",
            "**/*_test.lua",
            "**/doc/**",
            "**/docs/**",
            "**/test/**",
            "**/tests/**",
            "**/spec/**",
            "**/specs/**",
            "**/benchmark/**",
            "**/benchmarks/**",
            "**/build/**",
            "**/dist/**",
            "**/node_modules/**"
        ]

    },

    "diagnostics": {
        "disable": ["missing-fields"]
    }
}
